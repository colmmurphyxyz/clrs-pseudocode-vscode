{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pseudocode",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#funcdefs"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#booleans"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line",
				"match": "\\/\\/.*\\n"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.pseudocode",
				"match": "\\b(a|array|be|downto|else|for|if|let|new|print|repeat|return|to|until|while)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.pseudocode",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pseudocode",
					"match": "\\\\."
				}
			]
		},
		"funcdefs": {
			"patterns": [{
				"name": "entity.name.function",
				"match": "[a-zA-Z$][a-zA-Z0-9'\\-_^${}\\\\]*(?=\\()"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "-?[0123456789]+"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "entity.name.type",
				"match": "\\s(\\+|-|\\*|\\\\|mod|<|<=|==|=|>|>=|>>|<<|and|or|not|xor)\\s"
			}]
		},
		"booleans": {
			"patterns": [{
				"name": "variable.language.pseudocode",
				"match": "\\b(TRUE|FALSE|NIL)\\b"
			}]
		}
	},
	"scopeName": "source.pseudocode"
}